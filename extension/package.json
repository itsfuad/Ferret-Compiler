{
  "name": "ferret",
  "displayName": "Ferret",
  "description": "Ferret Language Support",
  "version": "0.0.2",
  "icon": "ferret.png",
  "publisher": "Ferret",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [],
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/itsfuad/ferret"
  },
  "contributes": {
    "languages": [
      {
        "id": "ferret-fer",
        "aliases": ["Ferret (.fer)"],
        "extensions": [".fer", ".ferret"],
        "configuration": "./language-configuration.json",
        "icon": {"dark": "ferret.png", "light": "ferret.png"}
      },
      {
        "id": "ferret-mod",
        "aliases": ["Ferret Module", "RET"],
        "extensions": [".ret"],
        "filenames": ["fer.ret"],
        "configuration": "./language-configuration.json",
        "icon": {"dark": "ferret_mod.png", "light": "ferret_mod.png"}
      },
      {
        "id": "ferret-lock",
        "aliases": ["Ferret Lock", "LOCK"],
        "extensions": [".lock", ".ferret.lock"],
        "filenames": ["ferret.lock", "fer.lock"],
        "configuration": "./language-configuration.json",
        "icon": {"dark": "ferret_lock.png", "light": "ferret_lock.png"}
      }
    ],
    "grammars": [
      {
        "language": "ferret-fer",
        "scopeName": "source.fer",
        "path": "./syntaxes/fer.tmLanguage.json"
      },
      {
        "language": "ferret-mod",
        "scopeName": "source.ret",
        "path": "./syntaxes/toml.tmLanguage.json"
      },
      {
        "language": "ferret-lock",
        "scopeName": "source.json",
        "path": "./syntaxes/lock.tmLanguage.json",
        "injectTo": ["source.json"],
        "embeddedLanguages": {},
        "grammar": "json"
      }
    ],
    "snippets": [
      {
        "language": "ferret-fer",
        "path": "./snippets/toml.json"
      },
      {
        "language": "ferret-mod",
        "path": "./snippets/toml.json"
      },
      {
        "language": "ferret-lock",
        "path": "./snippets/toml.json"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.fer": "ferret-fer",
        "*.ret": "ferret-mod",
        "fer.ret": "ferret-mod",
        "*.lock": "ferret-lock",
        "ferret.lock": "ferret-lock",
        "fer.lock": "ferret-lock"
      }
    },
    "commands": [
      {
        "command": "ferret.toggleLSP",
        "title": "Toggle LSP Server",
        "category": "Ferret"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ferret LSP",
      "properties": {
        "ferretLanguageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Ferret Language Server. When disabled, only syntax highlighting will work."
        },
        "ferretLanguageServer.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the ferret Language Server."
        }
      }
    }
  },
  "main": "./out/client.js",
  "scripts": {
    "bundle": "esbuild src/client.ts --bundle --platform=node --outfile=out/client.js --external:vscode",
    "vscode:prepublish": "npm run compile && npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.25.0",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "Walrus",
    "Programming",
    "Language"
  ],
  "author": "Fuad Hasan",
  "license": "ISC",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
